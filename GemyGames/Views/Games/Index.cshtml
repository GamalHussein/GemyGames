@using GemyGames.Settings
@model IEnumerable<Game>


<a class="btn btn-primary btn-lg text-bg-info mt-3 mb-3" asp-action="Create" asp-controller="Games">
    <i class="bi bi-plus-circle-dotted"></i>
    Add Game

</a>
@if (!Model.Any())
{
	<div class="alart alart-warning mt-5">
		<h4>Not Found Game</h4>
		<p>You Need To Add Game</p>

	</div>
}
else
{

	<div>
		<table class="table table-hover table-bordered border-primary ">
			<tbody>
				@foreach (var game in Model)
				{
					<tr class="border-1 border-success">
						<td>
							<div class="d-flex justify-content-start align-items-center">
								<div class="flex-grow-1">
									@* <img class="w-25 h-50" src=@($"{ImageSettings.ImagePath}/{game.Cover}") alt="@game.Name" /> *@
									<img style="width:250px;height:250px" src=@($"{ImageSettings.ImagePath}/{game.Cover}") alt="@game.Name" />
								</div>
								<div class="d-flex flex-column justify-content-center">
									<h4 class="text-light">@game.Name</h4>
									<h5>@game.categorie.Name</h5>
								</div>
							</div>
							
						</td>
						<td class="align-middle ">
							<div class="d-flex justify-content-end">
								<a asp-action="Update" asp-route-id="@game.Id" class="btn btn-info rounded rounded-0">
									<i class="bi bi-pen-fill"></i>
								</a>
								<a  asp-action="Delete" asp-route-id="@game.Id" class="btn btn-danger rounded rounded-0">
									<i class="bi bi-trash3"></i>
								</a>
							</div>
						</td>
					</tr>
				}

			</tbody>


		</table>



	</div>
}
@using GemyGames.Settings
@model Game

@{
	ViewData["ViewTitle"] = Model.Name;
}

<div class="card border-success mt-5 overflow-hidden rounded-4 ">
	<div class="card-body p-0">
		<div class="row">
			<div class="col-md-8 px-4 py-5 d-flex flex-column justify-content-between">
				<div >
					<h1 class="text-success fw-bolder">@Model.Name</h1>
					<span class="badge bg-info fs-4 mb-4">@Model.categorie?.Name</span>
					<p class="fs-4">@Model.Discription</p>
				</div>
				<div class="col-md-4">
					@foreach (var cat in Model.Devices)
					{
						<i class="@cat.Device.Icon me-2 fs-2 text-secondary"></i>
					}
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<img src="@($"{ImageSettings.ImagePath}/{Model.Cover}")" alt="@Model.Name" class="w-100"/>
		</div>
	</div>
	
</div>